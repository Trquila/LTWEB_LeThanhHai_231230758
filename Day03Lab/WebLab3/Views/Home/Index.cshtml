@model IEnumerable<WebLab3.Models.Book>
@{
    ViewData["Title"] = "Danh sách";
}

<h2>Danh sách các cuốn sách</h2>
<hr />

<!-- Form lọc sách -->
<form asp-action="Index" method="get" class="form-inline" role="form">
    <div class="form-group mr-2">
        <label class="mr-2">Tác giả:</label>
        <select name="AuthorId" class="form-control" asp-items="ViewBag.authors">
            <option value="">--Chọn tác giả--</option>
        </select>
    </div>
    <div class="form-group mr-2">
        <label class="mr-2">Thể loại:</label>
        <select name="GenreId" class="form-control" asp-items="ViewBag.genres">
            <option value="">--Chọn thể loại--</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary ml-2">Lọc</button>
    <a asp-action="Create" class="btn btn-danger ml-2">Thêm mới</a>
</form>

<!-- Nút load partial view -->
<button id="loadAjax" class="btn btn-sm btn-primary">
    Click load book từ PartialView
</button>

<!-- Chỗ chứa dữ liệu load -->
<div id="data-from-ajax" class="row">
    Loading data...
</div>

<hr />

<!-- Script jQuery -->
@section Scripts {
    <script>
        $("#loadAjax").click(function () {
            $("#data-from-ajax").load("/Book/PopularBook");
        });
    </script>
}

<hr />

<!-- Danh sách sách -->
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Tên sách</th>
            <th>Giá</th>
            <th>Số trang</th>
            <th>Hình ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Price.ToString("N0") VNĐ</td>
                <td>@book.TotalPage</td>
                <td>
                    <img src="~/images/products/@book.Image" alt="@book.Title" width="50" />
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Phân trang (giả lập) -->
<div class="d-flex justify-content-between align-items-center">
    <span>Trang: 1 / 1</span>
    <div>
        <a href="#" class="btn btn-secondary btn-sm">←</a>
        <a href="#" class="btn btn-secondary btn-sm">→</a>
    </div>
</div>
