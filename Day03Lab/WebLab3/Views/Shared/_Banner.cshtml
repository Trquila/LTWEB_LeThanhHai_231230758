@model List<WebLab3.Models.Book>
@{
    ViewData["Title"] = "Danh sách sách";
}

<h2>Danh sách các cuốn sách</h2>
<hr />

<!-- Carousel hiển thị sách -->
<div id="bookCarousel" class="carousel slide mb-4" data-ride="carousel" data-interval="4000">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <li data-target="#bookCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var book = Model[i];
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="@book.Image" alt="@book.Title" class="d-block w-100" style="height:400px; object-fit:cover;" />
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                    <h5>@book.Title</h5>
                    <p>@book.Price.ToString("N0") VNĐ</p>
                </div>
            </div>
        }
    </div>

    <!-- Controls -->
    <a class="carousel-control-prev" href="#bookCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#bookCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Bảng danh sách sách -->
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Tên sách</th>
            <th>Giá</th>
            <th>Số trang</th>
            <th>Hình ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Price.ToString("N0") VNĐ</td>
                <td>@book.TotalPage</td>
                <td><img src="@book.Image" width="50" /></td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
